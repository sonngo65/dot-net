<Window x:Class="dialogTest.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dialogTest"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="400">
    <Grid Margin="0,0,0,0" >
        <DataGrid Name="dataGrid2" VerticalAlignment="top" HorizontalAlignment="Center" Width="300" Height="300" CanUserAddRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên Đơn vị" Width="100" Binding="{Binding Madv}"/>
                <DataGridTextColumn Header="Mã Đơn vị" Width="100" Binding="{Binding Tendv}"/>
                <DataGridTextColumn Header="Số điện thoại" Width="100"  Binding="{Binding Dienthoai}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
